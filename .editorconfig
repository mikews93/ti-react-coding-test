# for more information, visit: http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 180

[*.py]
indent_size = 4

# markdown files require trailing double whitespace for newline
[*.md]
trim_trailing_whitespace = false
